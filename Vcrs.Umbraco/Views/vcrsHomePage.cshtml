@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "vcrsLayout.cshtml";
}
<div class="page-content">
    <div class="hero--with-callout m-b-double">
        <div class="image" style="background-image:url(/vcrs_templates/images/background/v90-start.jpg);"></div>
        <div class="content-container">
            <div class="content">
				@Umbraco.Field("puff")
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row m-y-double">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                <h1>Låt oss ta hand om dig och din bil</h1>
                <p class="lead">Vi ser till att du tas om hand om, vare sig du ska köpa en ny bil eller komma in på en av våra prisbelönta hjulbyten.</p>
            </div>
        </div>
        <div class="row m-y-double">

            <div class="col-xs-6 m-b">
                <a href="javascript:void(0);" class="promo--normal">
                    <div class="promo-inner">
                        <div class="promo-image" style="background-image: url(/vcrs_templates/images/background/luxury.jpg);"></div>
                        <div class="image-tint"></div>
                        <div class="promo-content">
                            <div class="promo-title">Nya bilar <i class="icon-arrow-right"></i></div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xs-6 m-b">
                <a href="javascript:void(0);" class="promo--normal">
                    <div class="promo-inner">
                        <div class="promo-image" style="background-image: url(/vcrs_templates/images/background/xc60-hero.jpg);"></div>
                        <div class="image-tint"></div>
                        <div class="promo-content">
                            <div class="promo-title">Begagnade bilar</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xs-6 m-b">
                <a href="/verkstad/boka-hjulskifte/" class="promo--normal">
                    <div class="promo-inner">
                        <div class="promo-image" style="background-image: url(/vcrs_templates/images/background/v40-hero.jpg);"></div>
                        <div class="image-tint"></div>
                        <div class="promo-content">
                            <div class="promo-title">Boka Hjulskifte</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xs-6 m-b">
                <a href="javascript:void(0);" class="promo--normal">
                    <div class="promo-inner">
                        <div class="promo-image" style="background-image: url(/vcrs_templates/images/background/v90-start.jpg);"></div>
                        <div class="image-tint"></div>
                        <div class="promo-content">
                            <div class="promo-title">Webshop</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>